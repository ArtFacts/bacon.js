#!/usr/bin/env bash
set -e
echo TEST_SUITE=$TEST_SUITE
if [ ! -z $DEBUG ]; then
  DEBUG="debug"
fi
if [ "${TEST_SUITE}" = "browserstack" ]; then
  echo "building browser test suite"
  npm run browsertest-bundle
  echo "running on browserstack"
  npm run browserstack
else
  BABEL_ENV=test ./node_modules/.bin/mocha $DEBUG --compilers coffee:coffee-script/register,js:babel-register spec/specs/*.coffee
  BABEL_ENV=test ./node_modules/.bin/mocha $DEBUG --compilers ts:ts-node/register,js:babel-register spec/specs/*.ts
fi

